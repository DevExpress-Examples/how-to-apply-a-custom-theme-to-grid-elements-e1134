<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"        
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">

	<DataTemplate x:Key="{dxg:RowIndicatorThemeKey ResourceKey=RowTemplate}">
		<Border BorderBrush="{DynamicResource {dxg:GridRowThemeKey ResourceKey=GridDataRowDelimiterBrush}}" BorderThickness="0,0,1,1" Background="White">
			<ContentPresenter ContentTemplate="{DynamicResource {dxg:RowIndicatorThemeKey ResourceKey=IconPresenterTemplate}}"/>
		</Border>
	</DataTemplate>

	<DataTemplate x:Key="{dxg:RowIndicatorThemeKey ResourceKey=GroupRowTemplate}">
		<Border BorderBrush="Black" BorderThickness="0,0,1,0" Background="White">
			<ContentPresenter ContentTemplate="{DynamicResource {dxg:RowIndicatorThemeKey ResourceKey=IconPresenterTemplate}}"/>
		</Border>
	</DataTemplate>

	<ControlTemplate x:Key="{dxg:RowIndicatorThemeKey ResourceKey=GroupBorderTemplate}" TargetType="{x:Type ContentControl}">
		<Border x:Name="border" BorderBrush="Black" BorderThickness="0,1,0,0">
			<ContentPresenter/>
		</Border>
		<ControlTemplate.Triggers>
			<DataTrigger Binding="{Binding Path=IsGroupRowVisible}" Value="False">
				<Setter Property="BorderThickness" TargetName="border" Value="0"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding Path=GroupLevel}" Value="0">
				<Setter Property="BorderThickness" TargetName="border" Value="0,0,0,1"/>
			</DataTrigger>
		</ControlTemplate.Triggers>
	</ControlTemplate>

	<ControlTemplate x:Key="{dxg:RowIndicatorThemeKey ResourceKey=GroupItemsControlTemplate}" TargetType="{x:Type ContentControl}">
		<Border x:Name="border" BorderBrush="Black" BorderThickness="0,1,0,0">
			<ContentPresenter x:Name="content" Margin="0,0,0,-1"/>
		</Border>
		<ControlTemplate.Triggers>
			<DataTrigger Binding="{Binding RowsContainer.RowsLocation}" Value="BottomOnly">
				<Setter TargetName="border" Property="BorderThickness" Value="0"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding RowsContainer.RowsLocation}" Value="Middle">
				<Setter TargetName="border" Property="BorderThickness" Value="0"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding RowsContainer.IsGroupRowsContainer}" Value="True">
				<Setter TargetName="border" Property="BorderThickness" Value="0"/>
				<Setter TargetName="content" Property="Margin" Value="0"/>
			</DataTrigger>
		</ControlTemplate.Triggers>
	</ControlTemplate>

	<ControlTemplate x:Key="{dxg:RowIndicatorThemeKey ResourceKey=RowPanelTemplate}" TargetType="{x:Type ContentControl}">
		<Border Background="#FFFFFFFF">
			<ContentPresenter/>
		</Border>
	</ControlTemplate>

